extends layout

block content
  h1 Make a Reservation
  link(rel="stylesheet", href="/stylesheets/r.css")
  
  .reservation
    form(action='/reservation', method='post')
      .form-group
        label(for='name') Name:
        input(type='text', id='name', name='name', required)
      .form-group
        label(for='email') Email:
        input(type='email', id='email', name='email', required)
      .form-group
        label(for='phone') Phone:
        input(type='text', id='phone', name='phone', required)
      .form-group
        label(for='date') Date:
        input(type='date', id='date', name='date', required)
      .form-group
        label(for='time') Time:
        input(type='time', id='time', name='time', required)
      .form-group
        label(for='guests') Number of Guests:
        input(type='number', id='guests', name='guests', min='1', required)
      button.btn-book(type='submit') Submit Reservation

    // Optional: Add a back button if you want users to navigate easily
    a.btn-reserve(href='/') Back to Home
